<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/research_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:maxLines="1"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="24dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/research_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="3"
            android:text="desc"
            android:textColor="@android:color/white"
            android:textSize="16dip" />

        <ImageView
            android:id="@+id/image_research"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#444"
            android:padding="3dp" />

    </LinearLayout>

</android.support.constraint.LinearLayout>
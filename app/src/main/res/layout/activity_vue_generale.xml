<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:id="@+id/layout_general"
    tools:context="olga.maslova.outerspacemanager.activities.VueGeneraleActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/user_icon"
        android:src="@drawable/user_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/userView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Username"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:id="@+id/ScoreID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Score"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_gas">

        <ImageView
            android:id="@+id/gas_image_general"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/gas" />

        <TextView
            android:id="@+id/gas_points_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:text="Gas"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
       >

        <ImageView
            android:id="@+id/mineral_image_general"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/mineral"
            />

        <TextView
            android:id="@+id/mineral_points_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:text="Minerals"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
           />

    </LinearLayout>

    <TextView
        android:id="@+id/reports_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="Reports available: "
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/getReportBtn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="Show report number"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"

            android:layout_marginStart="16dp"
            android:layout_gravity="center_horizontal"
            />


        <Spinner
            android:id="@+id/spinner_report"
            android:layout_marginStart="12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

</LinearLayout>
